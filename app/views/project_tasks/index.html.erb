<h1>Listing project_tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>State</th>
      <th>Prio</th>
      <th>Size</th>
      <th>Project</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @project_tasks.each do |project_task| %>
      <tr>
        <td><%= project_task.title %></td>
        <td><%= project_task.state %></td>
        <td><%= project_task.prio %></td>
        <td><%= project_task.size %></td>
        <td><%= project_task.project %></td>
        <td><%= link_to 'Show', project_task %></td>
        <td><%= link_to 'Edit', edit_project_task_path(project_task) %></td>
        <td><%= link_to 'Destroy', project_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

